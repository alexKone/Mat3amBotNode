{% extends 'layouts/blankLayout.twig' %}

{% block content %}
  <section class="content-wrapper login-form">
    <div class="content-body">
      <form class="row match-height mx-auto">
        <div class="col-xl-6 col-md-9 col-sm-12 mx-auto">
          <div class="card">
            <div class="card-content">
              <div class="card-body">
                <h4 class="card-title">Login Form</h4>
                <h6 class="card-subtitle text-muted danger error-message"></h6>
              </div>
              <div class="card-body">
                <form class="form">
                  <div class="form-body">
                    <div class="form-group">
                      <label for="email" class="sr-only">Email</label>
                      <input type="text" id="js-email" class="form-control" placeholder="Email" name="email">
                    </div>
                    <div class="form-group">
                      <label for="password" class="sr-only">Last Name</label>
                      <input type="text" id="js-password" class="form-control" placeholder="Password" name="password">
                    </div>
                  </div>
                  <div class="form-actions center">
                    <button id="js-login-btn" type="button" class="btn btn-outline-primary">Send</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>
{% endblock %}

{% block javascripts %}
  <script src="login.js" type="text/javascript"></script>
{% endblock %}
